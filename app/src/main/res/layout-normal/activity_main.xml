<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="64dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultView">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/d10"
                app:srcCompat="@drawable/d10" />

            <EditText
                android:id="@+id/d10Number"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:autofillHints="@string/enter_num"
                android:background="@color/grey"
                android:ems="10"
                android:hint="@string/number"
                android:inputType="number"
                android:text="@string/zero"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/d12"
                app:srcCompat="@drawable/d12" />

            <EditText
                android:id="@+id/d12Number"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:autofillHints="@string/enter_num"
                android:background="@color/grey"
                android:ems="10"
                android:hint="@string/number"
                android:inputType="number"
                android:text="@string/zero"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/d20"
                app:srcCompat="@drawable/d20" />

            <EditText
                android:id="@+id/d20Number"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:autofillHints="@string/enter_num"
                android:background="@color/grey"
                android:ems="10"
                android:hint="@string/number"

                android:inputType="number"
                android:text="@string/zero"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/diceTitle"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/amarante"
            android:text="@string/dice_roll"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="35sp"
            android:textStyle="italic|bold"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resultView"
            android:layout_width="427dp"
            android:layout_height="0dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/amarante"
            android:text="@string/result"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="30sp"
            android:textStyle="italic|bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/backToMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="13dp"
            android:backgroundTint="#030000"
            android:contentDescription="@string/back_to_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <ImageButton
            android:id="@+id/diceToNotes"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#000000"
            android:contentDescription="@string/character_notes"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/notes" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultView">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/d4"
                app:srcCompat="@drawable/d4" />

            <EditText
                android:id="@+id/d4Number"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:autofillHints="@string/enter_num"
                android:background="@color/grey"
                android:ems="10"
                android:hint="@string/enter_num"
                android:inputType="number"
                android:text="@string/zero"
                android:textAlignment="viewStart"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/d6"
                app:srcCompat="@drawable/d6" />

            <EditText
                android:id="@+id/d6Number"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:autofillHints="@string/enter_num"
                android:background="@color/grey"
                android:ems="10"
                android:hint="@string/number"
                android:inputType="number"
                android:text="@string/zero"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/d8"
                app:srcCompat="@drawable/d8" />

            <EditText
                android:id="@+id/d8Number"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:autofillHints="@string/enter_num"
                android:background="@color/grey"
                android:ems="10"
                android:hint="@string/number"
                android:inputType="number"
                android:text="@string/zero"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="427dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultView">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/extra_notes"
                app:srcCompat="@drawable/notes" />

            <EditText
                android:id="@+id/modifier"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:autofillHints="@string/enter_num"
                android:background="@color/grey"
                android:ems="10"
                android:hint="@string/mod"
                android:inputType="number"
                android:text="@string/zero"
                android:textSize="14sp" />

            <Button
                android:id="@+id/rollButton"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:layout_marginTop="50dp"
                android:background="@color/dark_grey"
                android:fontFamily="@font/amarante"
                android:text="@string/roll"
                android:textColor="@color/yellow"
                android:textSize="24sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>